generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id         String   @id
  name       String?
  albumCover String?
  href       String?
  uri        String?
  artists    String[]
  Queue      Queue?   @relation(fields: [queueId], references: [id])
  queueId    Int?
}

model Queue {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  content     Song[]
  description String   @default("Created, with love, by Vynilla <3") @db.VarChar(255)
  sentTo      User?    @relation("incomingQueues", fields: [recipientId], references: id)
  sentBy      User     @relation("sentQueues", fields: [authorId], references: [id])
  recipientId Int?
  authorId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String
  name           String
  profile        Profile?
  sentQueues     Queue[]  @relation("sentQueues")
  incomingQueues Queue[]  @relation("incomingQueues")
  friends        User[]   @relation("friends") // god bless https://stackoverflow.com/questions/65162657/one-to-many-self-relation-in-prisma-schema
  friendRequests User[]   @relation("friends")
}
